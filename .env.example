# Environment Configuration
NODE_ENV=production

# Database Configuration
DB_NAME=pos_db
DB_USER=pos_user
DB_PASSWORD=change_this_secure_password
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Backend Configuration
BACKEND_PORT=3000

# Frontend Configuration
FRONTEND_PORT=4200

# JWT Configuration
JWT_SECRET=change_this_to_a_very_secure_random_string_min_32_chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Application Configuration
APP_NAME=POS System
APP_URL=http://localhost
CORS_ORIGIN=http://localhost:4200

# Email Configuration (for reports and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Store Configuration
STORE_NAME=My Store
STORE_TAX_RATE=0.10
STORE_CURRENCY=USD

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Session Configuration
SESSION_SECRET=change_this_session_secret_key
SESSION_MAX_AGE=86400000

# Report Configuration (JasperReports)
JASPER_REPORTS_PATH=./reports/templates
JASPER_OUTPUT_PATH=./reports/output
